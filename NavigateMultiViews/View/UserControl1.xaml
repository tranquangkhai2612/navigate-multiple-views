<UserControl
    x:Class="NavigateMultiViews.View.UserControl1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NavigateMultiViews.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:UserControl1ViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label
            Name="View1"
            Canvas.Left="10"
            Canvas.Top="10"
            Height="40"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="View 1"
            FontFamily="Georgia"
            FontSize="14"
            FontWeight="Bold" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button
                Width="90"
                Height="30"
                Margin="0,20"
                Command="{Binding GoTo2}"
                Content="Go to View 2" />
            <Button
                Width="90"
                Height="30"
                Command="{Binding GoTo3}"
                Content="Go to View 3" />
        </StackPanel>
    </Grid>
</UserControl>
